<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="mii.weather.SplashScreen">

    <ImageView
            android:id="@+id/imageView_splash_screen_before_ui"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="-0.3"
            android:translationZ="-1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/mii_logo"
            app:layout_constraintTop_toBottomOf="@+id/textView_splash_screen"
            android:contentDescription="@string/app_logo_on_splash_screen" />

    <TextView
        android:id="@+id/textView_splash_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationZ="1dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FAFAFA"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_splash_screen_before_ui"
            app:layout_constraintEnd_toEndOf="@+id/imageView_splash_screen_before_ui"
            app:layout_constraintStart_toStartOf="@+id/imageView_splash_screen_before_ui"
            app:layout_constraintTop_toTopOf="@+id/textView_splash_screen" />
</androidx.constraintlayout.widget.ConstraintLayout>